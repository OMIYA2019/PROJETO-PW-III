@model projetoLogin.Models.clLogin

@{
    ViewBag.Title = "CadLogin";
}

@using (Html.BeginForm("confCadLogin", "Home", FormMethod.Post))
{

    <h2>Cadastro do Login</h2>
    <br />

    <div>
        @Html.EditorFor(x => x.usuario, new
   {
       htmlAttributes = new { id = "txtUsuario", name = "txtUsuario", type = "text", @class = "form-control", placeholder = "Digite o usuário", required = "required", maxlength = "30" }
   })

        @Html.ValidationMessageFor(x => x.usuario, "", new { @class = "text-danger" })

    </div>

    <br />

    <div>

        @Html.EditorFor(x => x.senha, new
   {
       htmlAttributes = new { id = "txtSenha", name = "txtSenha", type = "password", @class = "form-control", placeholder = "Digite sua senha", required = "required", maxlength = "10" }
   })

        @Html.ValidationMessageFor(x => x.senha, "", new { @class = "text-danger" })
    </div>

    <br />
    <div>

        @Html.EditorFor(x => x.confSenha, new
   {
       htmlAttributes = new { id = "txtSenha", name = "txtSenha", type = "password", @class = "form-control", placeholder = "Confirme a senha", required = "required", maxlength = "10" }
   })

        @Html.ValidationMessageFor(x => x.confSenha, "", new { @class = "text-danger" })
    </div>

    <br /> @Html.DropDownList("tiposUsu", "Escolha o tipo de usuário")



    <br /><br /> <input type="submit" value="ENTRAR"><br />
    <br />
    @ViewBag.mensagem

}



