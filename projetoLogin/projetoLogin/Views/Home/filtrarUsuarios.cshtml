@model projetoLogin.Models.clLogin

@{
    ViewBag.Title = "filtrarUsuarios";
}

<h2>filtrarUsuarios</h2>


@using (Html.BeginForm("filtrarUsuarios", "Home", FormMethod.Post))
{
    <div>
        @Html.EditorFor(x => x.usuario, new
   {
       htmlAttributes = new { id = "txtUsuario", name = "txtUsuario", type = "text", @class = "form-control", placeholder = "Digite o usuário", required = "required", maxlength = "30" }
   })

        @Html.ValidationMessageFor(x => x.usuario, "", new { @class = "text-danger" })

    </div>
    <input type="submit" value="ENTRAR"><br />
}

@Html.Raw(ViewBag.GridViewString)

